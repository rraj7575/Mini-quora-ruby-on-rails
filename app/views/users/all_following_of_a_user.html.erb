<%= render 'shared_feed_menu_with_profile', user: @user %>
<div class="user_feed_content">
  <div class="user_feed_content_count"> <%= @user.following_count %> Following</div>
</div>
<div class="all_following">
<% @all_followings.each do |following| %>
    <div class="followers">
      <div class="user_profile_pic_in_following">
        <%= render 'user_profile_pic_small', user: User.find_by_id(following.user_id) %>
        <%= link_to following.following_name , all_answers_of_a_user_path(id: following.user_id) %>
      </div>
      <div class="user_profile_pic_in_follower_space">

      </div>
      <div class="user_profile_pic_in_following">
        <%= render 'about_a_follower', user: User.find_by_id(following.user_id), r_u_following: User.find_by_id(following.user_id).followers.where(following_id: current_user.id)%>
      </div>
    </div>
<% end %>
</div>
