<!DOCTYPE html>
<html>
<head>
  <title>MiniQuora</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'main' %>
</head>
<body>

  <% if current_user %>
    <nav class="navbar navbar-light navbar-default SiteHeader">
      <div class="header-div">
        <div class="header-logo show-inline-header">
          <%= link_to 'MiniQuora',questions_path, :class => 'logo-link' %>
        </div>
        <div class="show-inline-header">
          <%= link_to 'Home',questions_path, :class => 'home-link' %>
        </div>
        <!--<div class="menu show-inline-header"><input class="form-control mr-sm-2" type="text" placeholder="Search"></div>-->
        <div class="dropdown profile show-inline-header">
          <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">About Me<span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li> <%= link_to('Profile', edit_user_path(current_user)) %></li>
            <li><a href="#">Blogs</a></li>
            <li><a href="">Messages</a></li>
            <li><a href="#">Settings</a></li>
            <li class="divider"></li>
            <li> <%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
          </ul>
        </div>
      </div>
    </nav>
  <%end %>
  <%= yield %>
</body>
</html>
